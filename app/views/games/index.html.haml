- content_for :head do
  - title 'Games'
.page-header
  .container
    .row.-no-gutter
      .col
        %h1 Games
.container
  .row-4
    .col
      %a{href: '/games/1'}
        .list-game-playing{style: "background-image: url(#{image_url('home-bg.jpg')});"}
          .game-map UK
          .time
            %i.fa.fa-clock-o
            = rand(3..30).to_s + ':' + rand(10..59).to_s
    .col
      %a{href: '/games/2'}
        .list-game-playing{style: "background-image: url(#{image_url('home-bg.jpg')});"}
          .game-map Greenland
          .time
            %i.fa.fa-clock-o
            = rand(3..30).to_s + ':' + rand(10..59).to_s
    .col
      %a{href: '/games/3'}
        .list-game-playing{style: "background-image: url(#{image_url('home-bg.jpg')});"}
          .game-map Biodomes
          .time
            %i.fa.fa-check-circle-o
            Game Finished
  .row
    .col-8
      = render @finished_games