- content_for :head do
  = javascript_include_tag "match_report"

.page-header
  .container
    .row.-no-gutter
      .col
        %h1 Match Report

.container
  .jumbotron.jumbotron-match-report{style: "background-image: url(#{image_url('home-bg.jpg')});"}
    %img.avatar{src: "https://mcapi.ca/avatar/2d/Halftone/150"}
    %h2 Halftone won
  .row
    .col
      %strong.text-uppercase Most Kills
      %h3 Halftone
    .col
      %strong.text-uppercase Most blocks broken
      %h3 Halftone
    .col
      %strong.text-uppercase Longest killstreak
      %h3 Halftone
    .col
      %strong.text-uppercase Shortest Time Alive
      %h3 Komp
  .row
    .col-12.col-md-6.col-lg-4
      %h2.page-header Ranking
      .panel.panel-default
        %ul.list-group
          - 24.times do |i|
            %a.list-group-item{href: "/p/Halftone"}
              %span.badge= (29 - i).to_s + ":" + rand(10..59).to_s
              .row.-no-gutter
                .col-1= i + 1
                .col-11 Username
    .col-12.col-md-6.col-lg-8
      %h2.page-header Event timeline
      .match-timeline
        .panel.panel-default
          .panel-body
            .label.label-default 08:35
            %a{href: '/p/Halftone'}
              %strong{ "data-toggle" => "popover", "title" => "Halftone", "data-placement" => "top", "data-content" => "player_tooltip"} Halftone
            killed 
            %a{href: '/p/Halftone'}
              %strong{ "data-toggle" => "popover", "title" => "Komp", "data-placement" => "top", "data-content" => "player_tooltip"} Komp
            using a diamond sword

        .panel.panel-success
          .panel-body
            .label.label-success 07:06
            %a{href: '/p/Halftone'}
              %strong{ "data-toggle" => "popover", "title" => "Halftone", "data-placement" => "top", "data-content" => "player_tooltip"} Halftone
            found diamonds

        .panel.panel-default
          .panel-body
            .label.label-default 04:02
            %a{href: '#'}
              %strong{ "data-toggle" => "popover", "title" => "Halftone", "data-placement" => "top", "data-content" => "player_tooltip"} Halftone
            threw
            %a{href: '#'}
              %strong{ "data-toggle" => "popover", "title" => "Komp", "data-placement" => "top", "data-content" => "player_tooltip"} Komp
            into a fire

        .panel.panel-default
          .panel-body
            .label.label-default 02:01
            %a{href: '#'}
              %strong{ "data-toggle" => "popover", "title" => "Halftone", "data-placement" => "top", "data-content" => "player_tooltip"} Halftone
            shot
            %a{href: '#'}
              %strong{ "data-toggle" => "popover", "title" => "Komp", "data-placement" => "top", "data-content" => "player_tooltip"} Komp
            using a bow

        .panel.panel-warning.panel-feast
          .panel-body
            .label.label-warning 01:56
            A feast has started
            
        .panel.panel-default
          .panel-body
            .label.label-default 00:12
            %a{href: '#'}
              %strong{ "data-toggle" => "popover", "title" => "Halftone", "data-placement" => "top", "data-content" => "player_tooltip"} Halftone
            killed 
            %a{href: '#'}
              %strong{ "data-toggle" => "popover", "title" => "Komp", "data-placement" => "top", "data-content" => "player_tooltip"} Komp
            using a wooden sword

      / %h2.page-header Statistics
      / %canvas#weapons{width: 400, height: 200}