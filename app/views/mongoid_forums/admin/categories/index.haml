- content_for :head do
  - title 'Admin - Manage categories'
.page-header
  .container
    .row.-no-gutter
      .col
        %h1 Admin - Manage categories
.container
  %ul.nav.nav-tabs
    %li
      =link_to "Home", admin_root_path
    %li.active
      =link_to "Categories", admin_categories_path
    %li
      =link_to "Forums", admin_forums_path
    %li
      =link_to "User Groups", admin_groups_path
    %li
      =link_to "Users", admin_users_path

  %h2 Create a new category
  = link_to "New category", new_admin_category_path, class: "btn btn-default"

  %h2 Listing all categories
  %table.table
    %tr
      %th Name
      %th Options
      %th Remove
    - @categories.each do |category|
      %tr
        %td
          = link_to category.name, [:admin, category]
        %td
          = link_to "Show", admin_category_path(category), class: "btn btn-default"
          = link_to "Edit", edit_admin_category_path(category), class: "btn btn-default"
        %td
          = button_to "Destroy", admin_category_path(category), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class: "btn btn-primary"
