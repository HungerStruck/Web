- content_for :head do
  - title 'Admin - Manage categories'
.page-header
  .container
    .row.-no-gutter
      .col
        %h1 Admin - Manage categories
.container
  %ul.nav.nav-tabs
    %li
      =link_to "Home", admin_root_path
    %li.active
      =link_to "Categories", admin_categories_path
    %li
      =link_to "Forums", admin_forums_path
    %li
      =link_to "User Groups", admin_groups_path
    %li
      =link_to "Users", admin_users_path

  %h2 Add category
  = simple_form_for [:admin, @category] do |f|
    = f.input :name
    = f.input :position
    = f.submit "Create Category", class: "btn btn-default", :disable_with => "Creating..."
