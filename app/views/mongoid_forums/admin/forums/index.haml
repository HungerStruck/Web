- content_for :head do
  - title 'Admin - Manage Forums'
.page-header
  .container
    .row.-no-gutter
      .col
        %h1 Admin - Manage Forums
.container
  %ul.nav.nav-tabs
    %li
      =link_to "Home", admin_root_path
    %li
      =link_to "Categories", admin_categories_path
    %li.active
      =link_to "Forums", admin_forums_path
    %li
      =link_to "User Groups", admin_groups_path
    %li
      =link_to "Users", admin_users_path

  %h2 Create a new forum
  = link_to "New forum", new_admin_forum_path, class: 'btn btn-default'

  %h2 Listing all forums
  %table.table
    %tr
      %th
        Name
      %th
        Category

    - @forums.each do |forum|
      %tr
        %td
          = link_to forum.name, [:admin, forum]
        %td
          = link_to forum.category.name, [:admin, forum.category]
        %td
          = link_to "Show", admin_forum_path(forum)
        %td
          = link_to "Edit", edit_admin_forum_path(forum)
        %td
          = button_to "Destroy", admin_forum_path(forum), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }
