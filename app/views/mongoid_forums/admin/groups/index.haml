- content_for :head do
  - title 'Admin - Manage groups'
.page-header
  .container
    .row.-no-gutter
      .col
        %h1 Admin - Manage groups
.container
  %ul.nav.nav-tabs
    %li
      =link_to "Home", admin_root_path
    %li
      =link_to "Categories", admin_categories_path
    %li
      =link_to "Forums", admin_forums_path
    %li.active
      =link_to "Player Groups", admin_groups_path
    %li
      =link_to "Players", admin_users_path

  %h2 Create a new group
  = link_to "New group", new_admin_group_path

  %h2 Listing all groups
  %table.table
    %tr
      %th
        Name
      %th
        Moderator

    - @groups.each_with_index do |group, i|
      %tr
        %td
          = link_to group.name, [:admin, group]
        %td
          = group.moderator
        %td
          = link_to "Edit", edit_admin_group_path(group)
        %td
          = button_to "Destroy", admin_group_path(group), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }
