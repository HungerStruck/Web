.page-header
  %h1
    Admins

= form_tag admin_user_add_admin_path("dummy"), :method => :post do
  .row.pull-right
    .col-xs-8
      - data_source=  @non_admins.map {|non_admin| "#{non_admin.to_s}" }
      %input.form-control{:name => "[user][email]", :type => :text, "data-provide" => "typeahead", :autocomplete => :off, "data-source" =>  data_source}
    .col-xs-4
      = submit_tag("Add Admin", :class => "btn btn-primary")



%h3 Listing all admins
%table.table.table-striped
  %tr
    %th
      Name
    %th
      Actions
  - @admins.each do |admin|
    %tr
      %td
        = admin.forum_display_name
      %td
        = button_to "Remove", admin_user_remove_admin_path("dummy", user: {id: admin.id}), method: :post, data: { confirm: 'Are you certain you want to delete this?' }, class: "btn btn-danger"
