- content_for :head do
  - title @forum.name + ' - Forums'

- if mongoid_forums_admin?
  %nav.navbar.navbar-inverse.navbar-static-top
    .container
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to t("mongoid_forums.topics.actions.hide.#{@topic.hidden}"), toggle_hide_admin_topic_path(@forum, @topic)
        %li
          = link_to t("mongoid_forums.topics.actions.lock.#{@topic.locked}"), toggle_lock_admin_topic_path(@forum, @topic)
        %li
          = link_to t("mongoid_forums.topics.actions.pin.#{@topic.pinned}"), toggle_pin_admin_topic_path(@forum, @topic)

.page-header
  .container
    .row.-no-gutter
      .col
        %h1= @forum.name
.container
  .row
    .col-9
      .panel.panel-default
        .panel-body
          %h2.text-center.page-header= @topic.emojified_name
          .bigger-content
            = mongoid_forums_format(@posts[0].text)
      %div
        = paginate @posts, :theme => 'twitter-bootstrap-3'

      = render @posts, :locals => {:posts => @posts}
    .col-3
      - if @topic.can_be_replied_to? && can?(:reply, @topic)
        = link_to "Reply to topic", new_topic_post_path(@topic), :class => "btn btn-primary btn-block"
      - if mongoid_forums_user && @topic.subscriber?(mongoid_forums_user.id)
        = link_to "Unsubscribe", unsubscribe_topic_path(@topic), :class => "btn btn-default btn-block"
      -elsif mongoid_forums_user
        = link_to "Subscribe", subscribe_topic_path(@topic), :class => "btn btn-default btn-block"
      %hr
        %p
          Post by
          = user_tooltip_element(@posts[0].user.forum_display_name, true, false)
        %p
          Created
          = time_ago_in_words(@posts[0].created_at)
          ago
