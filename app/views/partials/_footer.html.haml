%footer
  - if !current_user
    .footer-signup
      .container.text-center
        Join the HungerStruck community
        = link_to "Register now", new_user_registration_path, class: "btn btn-white"
  .footer-top{:data => {'turbolinks-permanent' => true}}
    .container
      .row-6.-no-gutter-vert
        .col.text-right.footer-left
          .footer-title REVISIONS
          .footer-commit
            - if current_user
              %code
                %a{href:"https://github.com/HungerStruck/Web/commit/#{revision.sha}", target: "_blank"} #{revision.sha[0..5]}
            - else
              %code #{revision.sha[0..5]}
            #{revision.message}
        .col
          .footer-title SERVER STATUS
          .footer-status
            %i.fa.fa-check-circle
            All servers online
      .footer-menu
        .row-3
          .col
            Community
            %ul.list-unstyled
              %li
                %a{:href => "#"} Forums
              %li
                %a.text-discord{:href => "https://discord.gg/dRevUct"} Discord
              %li
                = link_to "Matches", matches_path
              %li
                %a{:href => "#"} Maps
          .col
            Moderation
            %ul.list-unstyled
              %li
                %a{:href => "#"} Moderators
              %li
                %a{:href => "#"} Report player
              %li
                %a{:href => "#"} Appeal punishment
          .col
            Development
            %ul.list-unstyled
              %li
                = link_to "Revision history", revisions_path
              %li
                %a{:href => "#"} Report a bug
              %li
                %a{:href => "#"} Report security issue
          .col
            The Organisation
            %ul.list-unstyled
              %li
                %a{:href => "#"} Our team
              %li
                %a{:href => "#"} Contact us
  .footer-bottom{:data => {'turbolinks-permanent' => true}}
    .container
      .row-6.-no-gutter
        .col
          %img.logo{:src => asset_path("logo_white.svg")}
          <strong>Hunger</strong>Struck
        .col.text-right
          %a.copyright{href: "https://www.enviark.co/"} © Enviark™ 2015-2016
