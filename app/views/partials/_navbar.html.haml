%nav.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      %a.navbar-brand{href: "/"}
        .navbar-logo= image_tag("logo.svg")
        .navbar-brand-content
          <strong>Hunger</strong>Struck
    %ul.nav.navbar-nav.navbar-right
      %li{class: active_controller('stats')}
        =link_to "Leaderboard", stats_path
      %li{class: active_controller('forums')}
        %a{href: "#"} Forums
      %li{class: active_controller('matches')}
        = link_to "Matches", matches_path
      - if !user_signed_in?
        %li.navbar-divider
        %li
          = link_to "Login", new_user_session_path
        %li
          = link_to "Register", new_user_registration_path

- if !flash[:notice].blank?
  .alert.alert-header.alert-info.text-center
    = flash[:notice]
- if !flash[:success].blank?
  .alert.alert-header.alert-success.text-center
    = flash[:success]
- if !flash[:alert].blank?
  .alert.alert-header.alert-warning.text-center
    = flash[:alert]
- if !flash[:danger].blank?
  .alert.alert-header.alert-danger.text-center
    = flash[:danger]
