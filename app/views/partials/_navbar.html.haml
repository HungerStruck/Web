%nav.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      %a.navbar-brand{href: "/"}
        .navbar-logo= image_tag("logo.svg")
        .navbar-brand-content
          <strong>Hunger</strong>Struck
    %ul.nav.navbar-nav.navbar-right
      %li{class: active_controller('forums')}
        %a{href: "#"} Forums
      %li{class: active_controller('matches')}
        = link_to "Matches", matches_path
      %li{class: active_controller('admin')}
        %a{href: "#"} Admin

- if !flash[:info].blank?
  .alert.alert-header.alert-info.text-center
    = flash[:info]
- if !flash[:success].blank?
  .alert.alert-header.alert-success.text-center
    = flash[:success]
- if !flash[:warning].blank?
  .alert.alert-header.alert-warning.text-center
    = flash[:warning]
- if !flash[:danger].blank?
  .alert.alert-header.alert-danger.text-center
    = flash[:danger]