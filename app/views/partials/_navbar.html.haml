%nav.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      %a.navbar-brand{href: "/"}
        .navbar-logo= image_tag("logo.svg")
        .navbar-brand-content
          <strong>Hunger</strong>Struck
    %ul.nav.navbar-nav.navbar-right
      %li{class: active_controller('mongoid_forums')}
        = link_to "Forums", mongoid_forums.root_path
      %li{class: active_controller('games')}
        = link_to "Games", main_app.games_path
      - if !user_signed_in?
        -# %li.navbar-divider
        %li
          = link_to "Log in", main_app.new_user_session_path
        %li
          = link_to "Sign up", main_app.new_user_registration_path
      - if mongoid_forums_user && mongoid_forums_user.mongoid_forums_admin?
        %li{class: active_controller('admin')}
          = link_to "Admin", mongoid_forums.admin_root_path

- if !flash[:notice].blank?
  .alert.alert-header.alert-info.text-center
    = flash[:notice]
- if !flash[:success].blank?
  .alert.alert-header.alert-success.text-center
    = flash[:success]
- if !flash[:alert].blank?
  .alert.alert-header.alert-warning.text-center
    = flash[:alert]
- if !flash[:danger].blank?
  .alert.alert-header.alert-danger.text-center
    = flash[:danger]
